<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_result_layout"
    android:clickable="false"
    android:nestedScrollingEnabled="false"
    android:longClickable="false">

    <ImageView
        android:id="@+id/result_icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:src="@drawable/ic_local_bar_black_24dp" />

    <TextView
        android:id="@+id/result_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/result_icon_imageview"
        android:text="@string/_beer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="2" />

    <TextView
        android:id="@+id/result_secondaryInfo_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result_icon_imageview"
        android:layout_alignLeft="@+id/result_name_textview"
        android:text="@string/_breweryName" />

</RelativeLayout>
